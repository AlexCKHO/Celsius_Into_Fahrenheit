@{
    ViewData["Title"] = "Convertor";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4">Celsius to Fahrenheit Convertor</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" action="/Home/ConvertCelsiusToFahrenheit">
                <div class="form-group">
                    <label for="celsius">Enter Celsius:</label>
                    <input type="number" step="0.01" name="celsius" id="celsius" class="form-control" required />
                </div>
                <div class="text-center">
                    <input type="submit" value="Convert" class="btn btn-primary" />
                </div>
            </form>

            @if (ViewData["Error"] != null)
            {
                <div class="mt-4 alert alert-danger text-center">
                    <strong>@ViewData["Error"].ToString()</strong>
                </div>
            }

            @if (ViewData["Result"] != null)
            {
                <div class="mt-4 alert alert-info text-center">
                    <strong>@ViewData["Result"].ToString()</strong>
                </div>
            }
        </div>
    </div>
</div>
